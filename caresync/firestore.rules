rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Email OTP Collection
    match /email_otps/{email} {
      // Allow anyone to create OTP (for signup)
      allow create: if true;
      
      // Allow reading own OTP if authenticated or by email match
      allow read: if request.auth != null || 
                     resource.data.email == email;
      
      // Allow updating (for verification)
      allow update: if true;
      
      // Allow deletion after verification
      allow delete: if request.auth != null;
    }
    
    // Email Queue Collection (for sending emails)
    match /email_queue/{emailId} {
      // Allow creating email queue items
      allow create: if true;
      
      // Server/Cloud Functions can read/delete
      allow read, delete: if request.auth != null;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Health records
    match /health_records/{recordId} {
      allow read, write: if request.auth != null && 
                            resource.data.userId == request.auth.uid;
    }
    
    // Medications
    match /medications/{medId} {
      allow read, write: if request.auth != null && 
                            resource.data.userId == request.auth.uid;
    }
    
    // Appointments
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null && 
                            resource.data.userId == request.auth.uid;
    }
    
    // Emergency Contacts
    match /emergency_contacts/{contactId} {
      allow read, write: if request.auth != null && 
                            resource.data.userId == request.auth.uid;
    }
  }
}
